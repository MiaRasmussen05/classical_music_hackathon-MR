{
  "name": "music_hackathon",
  "description": "Run the Tailwind build step before Django's collectstatic",
  "version": "1.0.0",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "heroku-prebuild": "cd theme/static_src && npm ci --include=dev",
    "heroku-postbuild": "cd theme/static_src && npm run build",
    "build": "tailwindcss -i ./src/styles.css -o ../static/css/styles.css --minify"
  },
  "dependencies": {
    "tailwindcss": "^3.0.0"  // Ensure you have tailwindcss installed
  }
}
